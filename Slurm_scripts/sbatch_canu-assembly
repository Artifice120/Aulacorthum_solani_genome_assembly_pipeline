#!/bin/bash
#SBATCH -J solani
#SBATCH --account ACF-UTK0011
##SBATCH --mem=100gb
#SBATCH --nodes=1
#SBATCH --ntasks=48
#SBATCH --time=24:00:00
#SBATCH --partition=campus-bigmem
#SBATCH --error=error/solani.%j
#SBATCH --output=log/solani.%j
#SBATCH --qos=campus-bigmem
#SBATCH --exclusive

cd /lustre/isaac/scratch/jtorre28/solani

module load canu

canu -p solani -d /lustre/isaac/scratch/jtorre28/solani genomeSize=300m utgReAlign=true overlapper=mhap -nanopore /lustre/isaac/scratch/jtorre28/basecalling/A_solani/all_reads_sola.fasta usegrid=false
